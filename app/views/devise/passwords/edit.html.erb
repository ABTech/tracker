<% @title = "Change your password" %>

<table width="100%" height="100%" class="login-box" style="padding-right: 40px">
    <tr><td align="center" valign="middle">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <table>
          <tr>
            <td></td>
            <td><strong>Change your password</strong></td>
          </tr>
          <tr>
            <td></td>
            <td><%= render "devise/shared/error_messages", resource: resource %></td>
          </tr>
          <tr>
            <td align="right"><%= f.label :password, "New password:" %></td>
            <td><%= f.password_field :password, autofocus: true, autocomplete: "new-password", size: 32 %></td>
          </tr>
          <tr>
            <td><%= f.label :password_confirmation, "Confirm new password:" %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password", size: 32 %></td>
          </tr>
          <% if @minimum_password_length %><tr>
            <td><em>(<%= @minimum_password_length %> characters minimum)</em></td>
          </tr><% end %>
          <tr>
            <td>&nbsp;</td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "Change my password" %></td>
          </tr>
        </table>
      <% end %>
    </tr>
  </td>
</table>

<%= render "devise/shared/links" %>
