<% @title = "Forgot your Password?" %>

<table width="100%" height="100%" class="login-box" style="padding-right: 40px">
    <tr><td align="center" valign="middle">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <table>
          <tr>
            <td></td>
            <td><strong>Forgot your password?</strong></td>
          </tr>
          <tr>
            <td></td>
            <td><%= render "devise/shared/error_messages", resource: resource %></td>
          </tr>
          <tr>
            <td><%= f.label :email %>:</td>
            <td><%= f.email_field :email, :autofocus => true, autocomplete: "email", size: 32 %></td>
          </tr>
          <tr>
            <td>&nbsp;</td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "Send me reset password instructions" %></td>
          </tr>
        </table>
      <% end %>
    </td>
  </tr>
</table>

<%= render "devise/shared/links" %>
