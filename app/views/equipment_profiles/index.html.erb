<h1>Equipment Profile Categories</h1>

<div id="equipment-profile-list">
  <% @categories.each_with_index do |c,i| %>
    <div class="equipment-profile-category">
      <div class="equipment-profile-category-inner">
        <h2><%= c[:name] %></h2>
    
        <% unless c[:children].empty? %>
          <ul>
            <% c[:children].each do |child| %>
              <li><%= link_to child.description, child %> [<%= child.shortname %>]</li>
            <% end %>
          </ul>
        <% end %>
    
        <% c[:subcategories].each do |sc| %>
          <div class="equipment-profile-subcategory">
            <h3><%= sc[:name] %></h3>
        
            <ul>
              <% sc[:children].each do |child| %>
                <li><%= link_to child.description, child %> [<%= child.shortname %>]</li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<% if can? :create, EquipmentProfile %>
  <% content_for :more do %>
    <ul>
      <li><%= link_to "Add new equipment profile", new_equipment_profile_url %></li>
    </ul>
  <% end %>
<% end %>
